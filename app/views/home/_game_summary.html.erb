<div class="container container-border bg-light pb-4">
  <div class="row mt-3 mb-2">
    <div class="col-sm">
      <h2>Endabrechnung:</h2>
    </div>
  </div>
  <div class="row">
    <% @players.each do |player| %>
      <div class="col-sm">  
        <div class="card">
          <div class="card-body">
            <div class="card-title"> <%=player.name_or_email %></div>
            <div class="card-text"> Punkte:  <%=player.game_player.points %></div>
          </div>
        </div>
      </div>
    <% end %>
  </div>
</div>



