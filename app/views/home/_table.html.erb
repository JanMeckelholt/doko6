<div class="container">
  <div class="row">
    <div class="col-sm">
      <h2>Spieltisch:</h2> 
      <% if @game.tricks.last.cards.count <4 %>
        <p>"NÃ¤chster Spieler: " <%=@players[@game.next_player-1].name_or_email if @players[@game.next_player-1] %> </p>  
      <% else %>
           <%=link_to "Mein Stich", home_claim_trick_path(game: @game, player: @current_player), class: "btn btn-primary"%>
      <% end %>
    </div>
  </div>





  <div class="row">
    <% @players.each do |player| %>
      <div class="col-sm">  
        <div class="card-img-top">
          <% if player.hand.cards.find_by(trick: @game.tricks.last) %>
            <%=image_pack_tag player.hand.cards.find_by(trick: @game.tricks.last).path%>
          <% else %>
            <%=image_pack_tag "media/images/cards/back.png"%>
          <% end %>
        </div>
        <div class="card-body">
            <%=player.name_or_email%>
        </div>
      </div>
    <% end %>
  </div>
</div>



